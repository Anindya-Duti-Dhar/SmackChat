<anindya.sample.smackchat.utils.SquareRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/elementRootView"
    android:layout_width="wrap_content"
    android:background="@color/md_grey_200"
    android:layout_height="wrap_content">

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/item_card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@color/md_white_1000"
    android:elevation="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    card_view:cardCornerRadius="8dp"
    card_view:cardUseCompatPadding="true"
    app:ignore="NamespaceTypo">

    <!--   Recycler View Item Row   -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:id="@+id/room_no_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/contact_list_no_image_bg"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="UN"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textAllCaps="true"
                android:textColor="@color/md_white_1000"
                android:textSize="20sp"
                android:visibility="visible" />

       <ImageButton
           android:id="@+id/room_menu"
           android:layout_width="32dp"
           android:layout_height="32dp"
           android:layout_alignParentRight="true"
           android:layout_alignParentTop="true"
           android:layout_marginRight="4dp"
           android:layout_marginTop="8dp"
           android:src="@drawable/ic_action_more_vert"
           android:background="@color/transparent"/>

        <TextView
            android:id="@+id/room_name"
            android:layout_below="@+id/room_no_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:text="Room name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:textColor="@color/contact_list_item_name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/room_owner"
            android:layout_below="@+id/room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:text="Room name"
            android:layout_centerHorizontal="true"
            android:textColor="@color/md_grey_600"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/room_participant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:layout_alignParentBottom="true"
            android:paddingBottom="8dp"
            android:text="Room name"
            android:layout_centerHorizontal="true"
            android:textColor="@color/md_grey_600"
            android:textSize="14sp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>

</anindya.sample.smackchat.utils.SquareRelativeLayout>