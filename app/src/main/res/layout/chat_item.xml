<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/friend_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:gravity="center">

            <!--<de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/chat_user_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/user"
                android:scaleType="centerCrop"/>-->

            <TextView
                android:id="@+id/chat_user_without_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/user_image_bg"
                android:text="U"
                android:textAllCaps="true"
                android:visibility="visible"
                android:textStyle="normal"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chat_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User name"
                android:maxLines="1"
                android:visibility="gone"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/chat_user_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="chat from user"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:background="@drawable/friends_chat"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

            <TextView
                android:id="@+id/my_user_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="chat from user"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:background="@drawable/my_chat"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

    </LinearLayout>

</RelativeLayout>
